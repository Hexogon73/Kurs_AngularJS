@model CarTable.Models.Car

<h2>Save</h2>
@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.CarID > 0)
    {
        @Html.HiddenFor(a => a.CarID)
    }

    <div class="form-group">
        <label>Brand</label>
        @Html.TextBoxFor(a => a.Brand, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Brand)
    </div>
    <div class="form-group">
        <label>Model</label>
        @Html.TextBoxFor(a => a.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Model)
    </div>
    <div class="form-group">
        <label>Number</label>
        @Html.TextBoxFor(a => a.Number, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Number)
    </div>
    <div class="form-group">
        <label>Registration_date</label>
        @Html.TextBoxFor(a => a.Registration_date, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Registration_date)
    </div>
    <div class="form-group">
        <label>Owner</label>
        @Html.TextBoxFor(a => a.Owner, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Owner)
    </div>
    <div class="form-group">
        <label>Registration_place</label>
        @Html.TextBoxFor(a => a.Registration_place, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Registration_place)
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
}
